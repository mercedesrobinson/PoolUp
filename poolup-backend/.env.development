# Development Environment Variables for PoolUp Backend

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=sqlite:./poolup_development.db
DATABASE_PATH=./poolup_development.db

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration (Development)
GOOGLE_CLIENT_ID=your-dev-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret

# Plaid Configuration (Sandbox)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-sandbox-secret
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,auth,identity,assets

# Stripe Configuration (Test)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-test-webhook-secret

# Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006,exp://localhost:19000

# Security (Relaxed for development)
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/poolup-dev.log

# Email Configuration (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev-notifications@poolup.app
SMTP_PASS=your-dev-email-password

# Analytics (Development)
MIXPANEL_TOKEN=your-dev-mixpanel-token
SENTRY_DSN=your-dev-sentry-dsn

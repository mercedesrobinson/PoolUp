# PoolUp Money - Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=./poolup_money.db

# Plaid Configuration (Sandbox)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,auth,identity,assets
PLAID_COUNTRY_CODES=US

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Float Revenue Configuration
FLOAT_INTEREST_RATE=0.045
FLOAT_CALCULATION_FREQUENCY=daily
MINIMUM_BALANCE_FOR_INTEREST=1.00

# ACH Transfer Configuration
ACH_PROCESSING_FEE=0.25
ACH_DAILY_LIMIT=10000.00
ACH_MONTHLY_LIMIT=50000.00

# Pool Configuration
POOL_MINIMUM_CONTRIBUTION=5.00
POOL_MAXIMUM_CONTRIBUTION=10000.00
POOL_CREATION_FEE=0.00

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/poolup-money.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
